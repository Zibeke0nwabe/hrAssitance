  </div>

  <!-- Navbar -->
  <nav class="bg-white px-6 py-4 flex items-center justify-between">
    <div class="flex items-center space-x-6">
      <img src="/images/image1.jpeg" alt="Logo" class="h-10 w-auto" />
      <a href="/admin/register-manager?token=<%= token %>" class="text-gray-700 font-semibold hover:text-purple-800 transition">Register Manager</a>
